<?xml version="1.0" encoding="UTF-8"?>
<ecomp>
	<plugin useBcop="true" name="scalefilter">
		<short>Scale Window Title Filter</short>
		<long>Window title filter facility for the scale plugin</long>
		<category>Utility</category>
		<deps>
			<relation type="after">
				<plugin>scale</plugin>
			</relation>
			<requirement>
				<plugin>scale</plugin>
				<plugin>regex</plugin>
			</requirement>
		</deps>
		<screen>
			<group>
				<short>Behaviour</short>
				<option type="int" name="timeout">
					<short>Filter Type Timeout</short>
					<long>Time (in ms) after which the filter typing is automatically ended</long>
					<min>0</min>
					<max>10000</max>
					<default>0</default>
				</option>
				<option type="bool" name="filter_case_insensitive">
					<short>Filter Case Insensitive</short>
					<long>Use case insensitive string matching when filtering.</long>
					<default>false</default>
				</option>
				<option type="bool" name="filter_display">
					<short>Show Filter Text</short>
					<long>Show filter text.</long>
					<default>true</default>
				</option>
			</group>
			<group>
				<short>Appearance</short>
				<option type="bool" name="font_bold">
					<short>Bold Font</short>
					<long>Use bold font for window title display</long>
					<default>true</default>
				</option>
				<option type="int" name="font_size">
					<short>Font Size</short>
					<long>Font size for window title display</long>
					<min>6</min>
					<max>48</max>
					<default>24</default>
				</option>
				<option type="int" name="border_size">
					<short>Title Border Size</short>
					<long>Size of the border around the window title</long>
					<min>1</min>
					<max>20</max>
					<default>5</default>
				</option>
				<option type="color" name="font_color">
					<short>Font Color</short>
					<long>Font color of the window title</long>
					<default>
						<red>0xffff</red>
						<green>0xffff</green>
						<blue>0xffff</blue>
						<alpha>0xffff</alpha>
					</default>
				</option>
				<option type="color" name="back_color">
					<short>Background Color</short>
					<long>Background color of the window title</long>
					<default>
						<red>0x0000</red>
						<green>0x0000</green>
						<blue>0x0000</blue>
						<alpha>0x9999</alpha>
					</default>
				</option>
			</group>
		</screen>
	</plugin>
</ecomp>
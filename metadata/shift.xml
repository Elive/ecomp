<?xml version="1.0" encoding="UTF-8"?>
<ecomp>
	<plugin useBcop="true" name="shift">
		<short>Shift Switcher</short>
		<long>Shift Switcher Plugin</long>
		<category>Window Management</category>
		<deps>
			<relation type="before">
				<plugin>fade</plugin>
			</relation>
		</deps>
		<display>
			<group>
				<short>Key bindings</short>
				<option type="action" name="initiate">
					<short>Initiate</short>
					<short xml:lang="ca">Inicia</short>
					<short xml:lang="cs">Iniciovat</short>
					<short xml:lang="da">Start</short>
					<short xml:lang="de">Initiieren</short>
					<short xml:lang="es">Iniciar</short>
					<short xml:lang="fi">Aktivoi</short>
					<short xml:lang="fr">Lancer</short>
					<short xml:lang="hu">Indítás</short>
					<short xml:lang="it">Avvia</short>
					<short xml:lang="ja">開始</short>
					<short xml:lang="pl">Inicjuj</short>
					<short xml:lang="pt">Iniciar</short>
					<short xml:lang="pt_BR">Iniciar</short>
					<short xml:lang="ru">Инициировать</short>
					<short xml:lang="sv">Initiera</short>
					<short xml:lang="zh_CN">启动</short>
					<short xml:lang="zh_TW">起始化</short>
					<long>Initiate switcher.</long>
					<allowed key="true" edge="true" button="true"/>
					<default>
						<key>&lt;Super&gt;&lt;Shift&gt;s</key>
					</default>
				</option>
				<option type="action" name="initiate_all">
					<short>Initiate (All Workspaces)</short>
					<long>Initiate switcher (All Workspaces).</long>
					<allowed key="true" edge="true" button="true"/>
					<default/>
				</option>
				<option type="action" name="next">
					<short>Next Window</short>
					<long>Show switcher if not visible and select next window.</long>
					<allowed key="true" button="true"/>
					<default>
						<key>&lt;Super&gt;Tab</key>
					</default>
				</option>
				<option type="action" name="prev">
					<short>Previous Window</short>
					<long>Show switcher if not visible and select previous window.</long>
					<allowed key="true" button="true"/>
					<default>
						<key>&lt;Super&gt;&lt;Shift&gt;Tab</key>
					</default>
				</option>
				<option type="action" name="next_all">
					<short>Next Window (All Workspaces)</short>
					<long>Show switcher if not visible and select next window out of all windows.</long>
					<allowed key="true" button="true"/>
					<default>
						<key>&lt;Super&gt;&lt;Alt&gt;Tab</key>
					</default>
				</option>
				<option type="action" name="prev_all">
					<short>Previous Window (All Workspaces)</short>
					<long>Show switcher if not visible and select previous window out of all windows.</long>
					<allowed key="true" button="true"/>
					<default>
						<key>&lt;Super&gt;&lt;Shift&gt;&lt;Alt&gt;Tab</key>
					</default>
				</option>
				<option type="action" name="next_group">
					<short>Next Window (Group)</short>
					<long>Show switcher if not visible and select next window of the current application.</long>
					<allowed key="true" button="true"/>
					<default/>
				</option>
				<option type="action" name="prev_group">
					<short>Previous Window (Group)</short>
					<long>Show switcher if not visible and select previous window of the current application.</long>
					<allowed key="true" button="true"/>
					<default/>
				</option>
			</group>
		</display>
		<screen>
			<group>
				<short>Misc. options</short>
				<option type="float" name="speed">
					<short>Fade speed</short>
					<long>Fade in/out speed</long>
					<default>1.5</default>
					<min>0.1</min>
					<max>10.0</max>
					<precision>0.1</precision>
				</option>
				<option type="float" name="shift_speed">
					<short>Shift speed</short>
					<long>Shift animaton speed</long>
					<default>1.0</default>
					<min>0.1</min>
					<max>5.0</max>
					<precision>0.01</precision>
				</option>
				<option type="float" name="timestep">
					<short>Timestep</short>
					<short xml:lang="ca">Etapa</short>
					<short xml:lang="cs">Časový krok</short>
					<short xml:lang="da">Tidstrin</short>
					<short xml:lang="de">Zeitintervall</short>
					<short xml:lang="es">PAso</short>
					<short xml:lang="fi">Aikaviive</short>
					<short xml:lang="fr">Intervalle</short>
					<short xml:lang="hu">Időköz</short>
					<short xml:lang="it">Intervallo</short>
					<short xml:lang="ja">タイムステップ</short>
					<short xml:lang="pl">Opóźnienie</short>
					<short xml:lang="pt">Timestep</short>
					<short xml:lang="pt_BR">Timestep</short>
					<short xml:lang="ru">Квант времени </short>
					<short xml:lang="sv">Tidsintervall</short>
					<short xml:lang="zh_CN">时间区间</short>
					<short xml:lang="zh_TW">時間間隔</short>
					<long>Shift timestep</long>
					<default>1.2</default>
					<min>0.1</min>
					<max>50.0</max>
					<precision>0.1</precision>
				</option>
				<option type="match" name="window_match">
					<short>Shift Windows</short>
					<long>Windows that should be shown in the shift switcher</long>
					<default>Normal | Dialog | ModalDialog | Utility | Unknown</default>
				</option>
				<option type="bool" name="minimized">
					<short>Show Minimized</short>
					<long>Show minimized windows</long>
					<long xml:lang="ca">Mostra les finestres minimitzades</long>
					<long xml:lang="cs">Zobrazit minimalizovaná okna</long>
					<long xml:lang="da">Vis minimerede vinduer</long>
					<long xml:lang="de">Minimierte Fenster anzeigen</long>
					<long xml:lang="es">Muestra ventanas minimizadas</long>
					<long xml:lang="fi">Näytä pienennetyt ikkunat</long>
					<long xml:lang="fr">Afficher des fenêtres réduites</long>
					<long xml:lang="hu">Ikonizált ablakok megjelenítése</long>
					<long xml:lang="it">Mostra finestre ridotte a icona</long>
					<long xml:lang="ja">最小化したウィンドウの表示</long>
					<long xml:lang="pl">Wyświetl zminimalizowan okna</long>
					<long xml:lang="pt">Mostrar janelas minimizadas</long>
					<long xml:lang="pt_BR">Mostrar janelas minimizadas</long>
					<long xml:lang="ru">Отображение свернутых окон</long>
					<long xml:lang="sv">Visa minimerade fönster</long>
					<long xml:lang="zh_CN">显示最小化的窗口</long>
					<long xml:lang="zh_TW">顯示最小化的視窗</long>
					<default>true</default>
				</option>
				<option type="float" name="mouse_speed">
					<short>Mouse speed</short>
					<long>Mouse movement speed</long>
					<default>10.0</default>
					<min>0.1</min>
					<max>50.0</max>
					<precision>0.1</precision>
				</option>
				<option type="int" name="click_duration">
					<short>Click duration</short>
					<long>Maximum click duration in miliseconds.</long>
					<default>500</default>
					<min>10</min>
					<max>2000</max>
				</option>
			</group>
			<group>
				<short>Appearance</short>
				<option type="int" name="mode">
					<short>Switcher mode</short>
					<long>Switcher mode.</long>
					<default>0</default>
					<min>0</min>
					<max>1</max>
					<desc>
						<value>0</value>
						<name>Cover</name>
					</desc>
					<desc>
						<value>1</value>
						<name>Flip</name>
					</desc>
				</option>
				<option type="int" name="size">
					<short>Max window size</short>
					<long>Maximum window size (in percent of the screen width)</long>
					<default>50</default>
					<min>1</min>
					<max>100</max>
				</option>
				<option type="float" name="background_intensity">
					<short>Background intensity</short>
					<long>Background intensity.</long>
					<default>0.5</default>
					<min>0.0</min>
					<max>1.0</max>
					<precision>0.01</precision>
				</option>
				<option type="bool" name="hide_all">
					<short>Hide non Desktop windows</short>
					<long>Hide all non Desktop windows during switching</long>
					<default>false</default>
				</option>
				<subgroup>
					<short>Reflection</short>
					<option type="bool" name="reflection">
						<short>Reflection</short>
						<long>Show a reflection of the viewports on the ground</long>
						<default>true</default>
					</option>
					<option type="color" name="ground_color1">
						<short>Ground color(near)</short>
						<long>Color of the ground (near).</long>
						<default>
							<red>0xb333</red>
							<green>0xb333</green>
							<blue>0xb333</blue>
							<alpha>0xcccc</alpha>
						</default>
					</option>
					<option type="color" name="ground_color2">
						<short>Ground color(far)</short>
						<long>Color of the ground (far).</long>
						<default>
							<red>0xb333</red>
							<green>0xb333</green>
							<blue>0xb333</blue>
							<alpha>0x0000</alpha>
						</default>
					</option>
					<option type="float" name="ground_size">
						<short>Reflection ground size</short>
						<long>Reflection ground size.</long>
						<default>0.5</default>
						<min>0.0</min>
						<max>1.0</max>
						<precision>0.01</precision>
					</option>
					<option type="float" name="intensity">
						<short>Intensity</short>
						<long>Reflection intensity</long>
						<default>0.4</default>
						<min>0.0</min>
						<max>1.0</max>
						<precision>0.01</precision>
					</option>
				</subgroup>
				<option type="int" name="flip_rotation">
					<short>Flip angle</short>
					<long>Rotation angle of the flip animation</long>
					<default>30</default>
					<min>-80</min>
					<max>80</max>
				</option>
				<option type="float" name="cover_offset">
					<short>Cover offset</short>
					<long>Cover movement offset.</long>
					<default>0.0</default>
					<min>-0.4</min>
					<max>0.4</max>
					<precision>0.01</precision>
				</option>
				<option type="int" name="overlay_icon">
					<short>Overlay Icon</short>
					<short xml:lang="ca">Superposa la icona</short>
					<short xml:lang="cs">Překrýt ikonou</short>
					<short xml:lang="da">Overlejringsikon</short>
					<short xml:lang="de">Symbol überlagern</short>
					<short xml:lang="es">Superponer icono</short>
					<short xml:lang="fi">Aseta kuvake päälle</short>
					<short xml:lang="fr">Superposer l'icône</short>
					<short xml:lang="hu">Átfedő ikon</short>
					<short xml:lang="it">Icona di sovrapposizione</short>
					<short xml:lang="ja">オーバレイアイコン</short>
					<short xml:lang="pl">Ikona okna</short>
					<short xml:lang="pt">Ícone de Instalação Sobreposta</short>
					<short xml:lang="pt_BR">Ícone de Instalação Sobreposta</short>
					<short xml:lang="ru">Наложить значок</short>
					<short xml:lang="sv">Lägg ikoner över</short>
					<short xml:lang="zh_CN">覆盖图标</short>
					<short xml:lang="zh_TW">重疊圖示</short>
					<long>Overlay an icon on windows in the shift switcher</long>
					<default>1</default>
					<min>0</min>
					<max>2</max>
					<desc>
						<value>0</value>
						<name>None</name>
					</desc>
					<desc>
						<value>1</value>
						<name>Emblem</name>
					</desc>
					<desc>
						<value>2</value>
						<name>Big</name>
					</desc>
				</option>
				<option type="bool" name="mipmaps">
					<short>Mipmaps</short>
					<long>Generate mipmaps</long>
					<default>false</default>
				</option>
				<option type="int" name="multioutput_mode">
					<short>Multi Output Mode</short>
					<long>Selects how the switcher is displayed if multiple output devices are used.</long>
					<min>0</min>
					<max>2</max>
					<default>0</default>
					<desc>
						<value>0</value>
						<name>Disabled</name>
					</desc>
					<desc>
						<value>1</value>
						<name>On activated output</name>
					</desc>
					<desc>
						<value>2</value>
						<name>One big switcher</name>
					</desc>
	    			</option>
			</group>
			<group>
				<short>Window title display</short>
				<option type="bool" name="window_title">
					<short>Show Window Title</short>
					<long>Show window title of currently selected window.</long>
					<default>true</default>
				</option>
				<option type="bool" name="title_font_bold">
					<short>Bold Font</short>
					<long>Selects if the window title should be displayed in bold font or not.</long>
					<default>false</default>
				</option>
				<option type="int" name="title_font_size">
					<short>Font Size</short>
					<long>Font size for the window title</long>
					<default>16</default>
					<min>6</min>
					<max>96</max>
				</option>
				<option type="color" name="title_back_color">
					<short>Background Color</short>
					<long>Background color for the window title</long>
					<default>
						<red>0x0000</red>
						<green>0x0000</green>
						<blue>0x0000</blue>
						<alpha>0x9999</alpha>
					</default>
				</option>
				<option type="color" name="title_font_color">
					<short>Font Color</short>
					<long>Font color for the window title</long>
					<default>
						<red>0xffff</red>
						<green>0xffff</green>
						<blue>0xffff</blue>
						<alpha>0xffff</alpha>
					</default>
				</option>
				<option type="int" name="title_text_placement">
					<short>Text Placement</short>
					<long>Selects where to place the window title.</long>
					<default>2</default>
					<min>0</min>
					<max>2</max>
					<desc>
						<value>0</value>
						<name>Centered on screen</name>
					</desc>
					<desc>
						<value>1</value>
						<name>Above</name>
					</desc>
					<desc>
						<value>2</value>
						<name>Below</name>
					</desc>
				</option>
			</group>
		</screen>
	</plugin>
</ecomp>